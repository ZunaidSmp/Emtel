<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>LEAD_SOURCE_ADDITIONAL_INFO_VALIDATION</fullName>
    <active>true</active>
    <description>If the lead source is selected as others then Lead Source Additional Info field is mandatory</description>
    <errorConditionFormula>AND(NOT($Setup.GlobalMute__c.AllValidationRuleDisabled__c),
ISPICKVAL(  LeadSource__c , &quot;Others&quot;), ISBLANK(  Lead_Source_Additional_Info__c ) )</errorConditionFormula>
    <errorDisplayField>Lead_Source_Additional_Info__c</errorDisplayField>
    <errorMessage>Lead Source Additional Info is Required</errorMessage>
</ValidationRule>
